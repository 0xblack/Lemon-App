<UserControl x:Class="Lemon_App.FLGDIndexItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lemon_App"
             mc:Ignorable="d" Width="150" Height="200">
    <Grid Background="#00000000">
        <Border x:Name="im" Margin="0,0,0,50" Background="#FF007ACC"/>
        <TextBlock x:Name="name" Margin="10,155,10,10" TextWrapping="Wrap" Text="TextBlock" Foreground="{DynamicResource TextX1ColorBrush}" FontSize="14" TextAlignment="Justify"/>
    </Grid>
</UserControl>