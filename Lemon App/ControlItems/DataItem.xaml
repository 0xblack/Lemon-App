<UserControl x:Name="userControl" x:Class="Lemon_App.DataItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lemon_App"
             mc:Ignorable="d" Height="45" Background="#00000000" MouseDown="userControl_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="347*"/>
            <ColumnDefinition Width="365*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" Height="1" VerticalAlignment="Bottom" Margin="10,0" Background="{DynamicResource BorderColorBrush}"/>
        <TextBlock x:Name="namss" TextWrapping="NoWrap" Foreground="{DynamicResource ResuColorBrush}" VerticalAlignment="Center" Margin="10,14" Height="15"><Run  x:Name="name" Text="Tb000000000000"/><Run Text="  "/><TextBlock  x:Name="mss"  Text="mss" Opacity="0.6"/></TextBlock>
        <TextBlock x:Name="ser" Margin="10,14" TextWrapping="NoWrap" Text="TextBlock" VerticalAlignment="Center" Foreground="{DynamicResource ResuColorBrush}" Grid.Column="1" Height="15" Opacity="0.8"/>
        <Border x:Name="color" HorizontalAlignment="Left" Width="5" Background="#00000000" Margin="0,5"/>
    </Grid>
</UserControl>
