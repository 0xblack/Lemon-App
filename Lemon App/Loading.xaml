<Window x:Class="Lemon_App.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lemon_App"
        mc:Ignorable="d"
        Title="Loading" Height="180" Width="180" Topmost="True" ShowInTaskbar="False" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Effect>
        <DropShadowEffect BlurRadius="20" Opacity="0.4" ShadowDepth="0"/>
    </Window.Effect>
    <Border Background="White" Margin="20" CornerRadius="100">
        <Grid>
            <TextBlock TextWrapping="Wrap" Text="登录中" Margin="0" VerticalAlignment="Center" Foreground="#FF474747" TextAlignment="Center"/>
            <Border BorderBrush="#FF0067AC" BorderThickness="1" Height="10" VerticalAlignment="Bottom" Width="10" Margin="65,0,65,25" CornerRadius="10" Background="#FF45B4FF">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#FF0061A2" Opacity="0.4"/>
                </Border.Effect>
            </Border>
        </Grid >
    </Border>
</Window>
