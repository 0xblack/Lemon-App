<UserControl x:Class="Lemon_App.SingerItem"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lemon_App"
             mc:Ignorable="d" Width="100" Height="150">
    <Grid x:Name="back" Background="#FF007ACC">
        <Grid.Clip>
            <RectangleGeometry RadiusX="5" RadiusY="5">
                <RectangleGeometry.Rect>
                    <Rect Width="100" Height="150"/>
                </RectangleGeometry.Rect>
            </RectangleGeometry>
        </Grid.Clip>
        <Border x:Name="im" Margin="0,0,0,50" Background="#FF007ACC"/>
        <TextBlock x:Name="name" Margin="5,115,5,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="#FFF3F3F3" FontSize="14" TextAlignment="Center" Height="18"/>
    </Grid>
</UserControl>